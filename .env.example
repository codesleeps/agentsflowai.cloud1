# AgentsFlowAI Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================================================
# REQUIRED - Application will not work without these
# ============================================================================

# Database connection string (PostgreSQL with SSL)
# Example: postgresql://user:password@host:5432/database?sslmode=require
DATABASE_URL=

# Public URL of your application
# Development: http://localhost:3000
# Production: https://yourdomain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node environment
NODE_ENV=development

# Application port
PORT=3000

# ============================================================================
# AI PROVIDERS - At least one is required for AI functionality
# ============================================================================

# OpenAI API Key (for GPT models)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API Key (for Claude models)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Google Generative AI API Key (for Gemini models)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY=

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================

# Session secret for encrypting session data
# Generate with: openssl rand -base64 32
SESSION_SECRET=

# Better Auth configuration
BETTER_AUTH_SECRET=
BETTER_AUTH_URL=http://localhost:3000

# ============================================================================
# BACKGROUND JOBS (Inngest)
# ============================================================================

# Inngest event key
# Get from: https://app.inngest.com/
INNGEST_EVENT_KEY=

# Inngest signing key
INNGEST_SIGNING_KEY=

# ============================================================================
# EXTERNAL INTEGRATIONS (Optional)
# ============================================================================

# Twilio (for SMS/Voice)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Email service (if using)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# ============================================================================
# MONITORING & ANALYTICS (Optional)
# ============================================================================

# Sentry DSN (for error tracking)
NEXT_PUBLIC_SENTRY_DSN=

# Google Analytics ID
NEXT_PUBLIC_GA_ID=

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Enable debug logging
DEBUG=false

# Skip authentication (development only - NEVER in production)
SKIP_AUTH=false
