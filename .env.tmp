
# Main application port
PORT=3000

# Authentication
# Generate a secret with: openssl rand -base64 32
AUTH_SECRET="your-auth-secret"
# Note: For production, use a long, randomly generated string.

# Admin user (for initial setup and administrative tasks)
ADMIN_EMAIL="admin@example.com"

# Database
# Use the PostgreSQL connection string from your Neon or other provider
# Format: postgresql://[user]:[password]@[hostname]:[port]/[database]
DATABASE_URL="postgresql://user:password@host/db"

# Optional: For local development with Docker
# DATABASE_URL="postgresql://admin:password@localhost:5432/agentsflow?schema=public"

# AI Provider APIs
# -----------------

# Google AI (Gemini)
# Get your key from Google AI Studio
GOOGLE_API_KEY="your-google-api-key"

# Ollama (Local LLM Server)
# This is the default URL if you are running Ollama locally.
# If Ollama is on a different server, update this URL.
OLLAMA_BASE_URL="http://localhost:11434"

# Anthropic API Key (Claude models)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# OpenAI API Key (GPT models) - Optional
OPENAI_API_KEY=sk-xxxxx

# Resend (for sending emails)
# Not yet implemented, but planned for future features like notifications.
# RESEND_API_KEY="your-resend-api-key"

# Other services
# ---------------
# For integrations with other services like Zapier, CRMs, etc.
# ZAPIER_WEBHOOK_URL="your-zapier-webhook-url"

# Logging and Monitoring
# ----------------------
# For services like Sentry, Logtail, or Datadog
# SENTRY_DSN="your-sentry-dsn"
